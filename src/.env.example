# Application Settings
APP_PORT=8080
APP_DEBUG=true
APP_OS=Chrome
APP_BASIC_AUTH=admin:admin
APP_CHAT_FLUSH_INTERVAL=7

# Database Settings
DB_URI=postgres://postgres:postgres@localhost:5432/whatsapp?sslmode=disable

# WhatsApp Settings
WHATSAPP_AUTO_REPLY=Don't reply this message
WHATSAPP_WEBHOOK=https://yourcallback.com/callback
WHATSAPP_WEBHOOK_SECRET=your-webhook-secret
WHATSAPP_ACCOUNT_VALIDATION=true
WHATSAPP_CHAT_STORAGE=true

# Master Admin Settings
MASTER_ADMIN_TOKEN=your-master-admin-token

# MinIO Settings
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_BUCKET_NAME=whatsapp-media

# RabbitMQ Settings
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# JWT Settings
JWT_SECRET=your-jwt-secret
JWT_EXPIRATION=24h